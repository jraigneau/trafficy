%script( type="text/javascript" src="/javascripts/highcharts.js")
%script( type="text/javascript" src="/javascripts/highcharts-more.js")
%script( type="text/javascript" src="/javascripts/highcharts-exporting.js")

.row
  .span3.bs-docs-sidebar
    %ul(class="nav nav-list bs-docs-sidenav")
      %li(class="bs-docs-header")
        Matin
      %li
        %a(href="#graph1")
          <i class="icon-chevron-right"></i>Synthèse
      %li
        %a(href="#graph1-scatter")
          <i class="icon-chevron-right"></i>Répartition
      %li(class="bs-docs-header")
        Soir
      %li
        %a(href="#graph2")
          <i class="icon-chevron-right"></i>Synthèse
      %li
        %a(href="#graph2-scatter")
          <i class="icon-chevron-right"></i>Répartition




  .span9      
    .hero-unit
      %h2 Matin <small>De #{@origin} à #{@destination}
      %section(id="graph1")
        %h4 Synthèse des temps de trajet du matin
        %p Ce graphique permet de visualiser l'amplitude entre temps de trajet minimum et maximum pour chaque créneau horaire.
        #container_graph1.graphs    
        = render(:haml,:'chart_bar_partial',:locals => {:graph => @graph1, :container_id => "container_graph1"})
      %section(id="graph1-scatter")
        %h4 Répartition des temps de trajet du matin
        %p Ce graphique permet de visualiser la répartition des temps de trajet pour chaque créneau horaire.
        #container_graph1-scatter.graphs    
        = render(:haml,:'chart_scatter_partial',:locals => {:graph => @graph3, :container_id => "container_graph1-scatter"})
    .hero-unit
      %h2 Soir  <small>De #{@destination} à #{@origin}
      %section(id="graph2")
        %h4 Synthèse des temps de trajet du soir
        %p Ce graphique permet de visualiser l'amplitude entre temps de trajet minimum et maximum pour chaque créneau horaire.
        #container_graph2.graphs    
        = render(:haml,:'chart_bar_partial',:locals => {:graph => @graph2, :container_id => "container_graph2"})
      %section(id="graph2-scatter")
        %h4 Répartition des temps de trajet du soir
        %p Ce graphique permet de visualiser la répartition des temps de trajet pour chaque créneau horaire.
        #container_graph2-scatter.graphs    
        = render(:haml,:'chart_scatter_partial',:locals => {:graph => @graph4, :container_id => "container_graph2-scatter"})
